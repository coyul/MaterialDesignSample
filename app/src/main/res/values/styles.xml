<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Sample.Button.Borderless.Colored" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAppearance">@style/TextAppearance.Sample.Widget.Button.Borderless.Colored</item>
    </style>

    <style name="TextAppearance.Sample.Widget.Button.Borderless.Colored" parent="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:textColor">@color/borderless_button_yellow</item>
    </style>

    <style name="Widget.Sample.Button.Colored.Primary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_colored_primary</item>
    </style>

    <style name="TextAppearance.Sample" parent="TextAppearance.AppCompat"/>

    <style name="TextAppearance.Sample.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Body.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Body.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Sample.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Headline.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Headline.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.Sample.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Sample.Small.Primary">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Sample.Small.Accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

</resources>
